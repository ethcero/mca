{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ami_name": "mca-practica1-{{timestamp}}",
      "instance_type": "t2.micro",
      "region": "us-east-1",
      "source_ami": "ami-0dedf6a6502877301",

      "ami_description": "Master Cloud Apps AWS practica 1",
      "ami_virtualization_type": "hvm",
      "communicator": "ssh",
      "ssh_username": "admin",
      "ssh_keypair_name": "mca",
      "ssh_private_key_file": "~/.ssh/mca.pem",
      "tags": {
        "Maintainer": "francisco.franco@ethcero.es"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "provision",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 2",
        "chmod +x /tmp/provision/scripts/provisioner.sh",
        "/tmp/provision/scripts/provisioner.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}

